{
  "name": "@swagent/koa",
  "version": "0.1.0",
  "description": "Swagent middleware for Koa. Auto-generates /llms.txt, /to-humans.md, and HTML landing from your OpenAPI spec.",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "openapi",
    "swagger",
    "llms-txt",
    "api-docs",
    "ai-first",
    "documentation",
    "koa",
    "middleware"
  ],
  "license": "MIT",
  "dependencies": {
    "@swagent/core": "workspace:*"
  },
  "peerDependencies": {
    "koa": ">= 2.0.0",
    "@koa/router": ">= 12.0.0"
  },
  "devDependencies": {
    "@koa/router": "^12.0.0",
    "@types/koa": "^3.0.1",
    "@types/koa__router": "^12.0.4",
    "@types/supertest": "^6.0.3",
    "koa": "^2.0.0",
    "supertest": "^7.2.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/X24Labs/SWAgent.git",
    "directory": "packages/koa"
  },
  "homepage": "https://swagent.dev"
}
